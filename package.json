{
  "name": "linkedin-post-consolidation-extension",
  "version": "1.0.0",
  "description": "Chrome extension for consolidating LinkedIn posts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
