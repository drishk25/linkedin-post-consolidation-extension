{
  "manifest_version": 3,
  "name": "LinkedIn Post Consolidator",
  "version": "1.0.0",
  "description": "Consolidate and export your LinkedIn saved posts to Google Sheets with detailed analytics",
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "https://www.googleapis.com/*",
    "https://www.linkedin.com/*"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": [
        "content/content.js"
      ],
      "css": [
        "assets/styles/common.css",
        "assets/styles/overlay.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LinkedIn Post Consolidator",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*",
        "assets/icons/*",
        "utils/storage.js",
        "utils/data-formatter.js",
        "utils/linkedin-selectors.js",
        "utils/error-handler.js",
        "content/post-extractor.js",
        "content/dom-scanner.js",
        "content/ui-overlay.js"
      ],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}